<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_confirm_sale_order_wizard" model="ir.ui.view">
      <field name="name">Confirm sale orders wizard</field>
      <field name="model">confirm.sale.order.wizard</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <p>Do you want to confirm these sale orders?</p>
          </sheet>
          <footer>
            <button type="object" name="button_confirm" string="Confirm" />
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_confirm_sale_order_wizard"
                name="Confirm sale orders"
                src_model="sale.order"
                res_model="confirm.sale.order.wizard"
                view_type="form"
                view_mode="form"
                target="new"
                multi="True"
                />
  </data>
</odoo>
