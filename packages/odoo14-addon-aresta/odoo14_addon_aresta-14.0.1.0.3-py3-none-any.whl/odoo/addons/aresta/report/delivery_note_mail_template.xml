<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="delivery_note_mail_template_view" model="mail.template">
            <field name="name">Delivery Note Template</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_from">${object.partner_id.email |safe}</field>
            <field name="subject">${object.partner_id.company_id.name} Delivery Order</field>
            <field name="body_html">
                <![CDATA[
                    <div>
                        <p>Hola,</p>

                        <p>Encontrará adjunto el albarán de entrega del nuevo pedido.</p>

                        <p>Gracias,</p>
                        <p>${object.partner_id.company_id.name}</p>
                    </div>
                ]]>
            </field>
        </record>
    </data>
</odoo>
