<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_form_send_delivery_note" model="ir.ui.view">
    <field name="name">send.delivery.note.form</field>
    <field name="model">send.delivery.note.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <p>Send report by email to the client.</p>
        </sheet>
        <footer>
          <button type="object" name="send_mail" string="Send"/>
          <button special="cancel" string="Cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_send_delivery_note_wizard" model="ir.actions.act_window">
      <field name="name">Send delivery note</field>
      <field name="res_model">send.delivery.note.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_form_send_delivery_note"/>
      <field name="target">new</field>
      <field name="context">{}</field>
      <field name="binding_view_types">form,list</field>
  </record>

  <record id="view_form_stock_picking_button" model="ir.ui.view">
      <field name="name">view.form.stock.picking.button</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
				<button name="action_cancel" position="after">
          <button name="%(action_send_delivery_note_wizard)d"
                  string="Send delivery note by email"
                  type="action"
                  context="{'default_active_id': active_id}"
          />
        </button>
      </field>
  </record>
</odoo>
